    "babel-loader": "^8.1.0",
    "husky": "^4.2.5",
    "jest-enzyme": "^7.1.2",
    "jest-puppeteer-preset": "^4.4.0",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "semantic-release": "^17.1.1",
