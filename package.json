  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-smooth-scroll-hook",
  "author": "liangzhirong",
  "module": "dist/react-smooth-scroll-hook.esm.js",
  "devDependencies": {
